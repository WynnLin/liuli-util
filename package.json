{
  "name": "@liuli-util/all",
  "private": true,
  "scripts": {
    "setup": "yarn && lerna run build && yarn",
    "fix:version": "syncpack fix-mismatches",
    "docs:build": "fliegdoc build",
    "docs:serve": "fliegdoc serve"
  },
  "workspaces": {
    "packages": [
      "libs/*"
    ]
  },
  "version": "0.0.1",
  "devDependencies": {
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "utility-types": "^3.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "rollup": "^2.36.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "fliegdoc": "^0.4.2",
    "syncpack": "^5.6.10",
    "@types/fs-extra": "^9.0.6",
    "fs-extra": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/rx-util"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  }
}
