{
  "name": "@liuli-util/all",
  "private": true,
  "scripts": {
    "setup": "npx lerna bootstrap && yarn pub",
    "fix:version": "syncpack fix-mismatches",
    "clean": "npx lerna clean",
    "pub": "npx lerna run pub",
    "clean:pkg": "npx lerna bootstrap && yarn clean"
  },
  "workspaces": {
    "packages": [
      "libs/*"
    ]
  },
  "version": "0.0.1",
  "devDependencies": {
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  }
}
